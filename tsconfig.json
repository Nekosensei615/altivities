{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "CommonJS",
        "lib": [
            "ES2020",
            "DOM",
            "ScriptHost"
        ],
        "alwaysStrict": true,
        "esModuleInterop": true,
        "incremental": false,
        "isolatedModules": true,
        "target": "ES2020",
        "moduleResolution": "Node",
        "noImplicitAny": false,
        "outDir": "docs",
        "removeComments": true,
        "rootDir": "source",
        "sourceMap": false,
        "typeRoots": [
            "node_modules/@types",
            "types"
        ],
        "types": [
            "jquery",
            "node",
            "peerjs",
            "phaser",
            "phaser-ui-tools",
            "survey-jquery"
        ],
        "watch": false
    },
    "include": [
        "source/**/*.ts"
    ],
    "exclude": [
        "docs",
        "node_modules"
    ]
}